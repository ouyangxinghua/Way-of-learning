*
    margin 0
    padding 0
    font-size 20px
html,body 
    width 100%
    height 100%
    .stage
        width: 900px;
        min-height: 100px;
        margin 0 auto
        margin-top 100px
        padding: 100px 50px;
        background-color pink 
        .container
            width 128px
            height 100px
            margin-left -64px
            transform-style preserve-3d
            transition transform 1s
            perspective 800px 
            position absolute
            left 50%
            .picture
                width 128px
                height 100px
                display inline-block
                box-shadow 0 2px 4px rgba(0,0,0,.5)
                -webkit-transition opacity 1s transform 1s
                position absolute
                bottom 0
