$hdbg_color = #e54847
$font_color = #ffffff
html,body 
    width 100%
    height 100%
    background-color #f4f4f4
    .flex
        display flex
    .flex1
        flex 1
    .section-til
        font-size 17px
        color #000
    .action-list.section-til
        padding-left 0.4rem

    .page
        width 100%
        background-color #f4f4f4
        position relative
        z-index 1
        margin 0 
        color #555555
        min-width 3.1rem
        -webkit-user-select none
        -webkit-tap-highlight-color rgba(255,255,255,0)
        font 14px/1.5 Arial,Helvetica,sans-serif
        .nav
            height 1.167rem
            font-size 0.4343rem
            text-align center
            background-color rgba(0,0,0,0.8)
            padding 0.265rem
            box-sizing border-box
            .arrow-left
                float left
                height 100%
                position relative
                &:after
                    content ''
                    width 0.29rem
                    height 0.29rem
                    position absolute
                    top 40%
                    left 16px
                    border 2px solid #ffffff
                    border-width 0 0 2px 2px 
                    box-sizing border-box
                    transform rotateZ(45deg) translateY(-50%)
            span 
                color $font_color
                display inline-block
        section 
            background-color #ffffff
            border-bottom 1px solid #e5e5e5
        .movie-header
            border-bottom none 
            padding 0
            background #f8f8f8
            .movie
                color $font_color
                padding 0.4rem
                line-height 1
                overflow hidden
                position relative
                box-sizing border-box
                filter blur(0)
                .movie-background,
                .movie-filter
                    position absolute
                    top 0
                    left 0
                    right 0
                    bottom 0
                .movie-background
                    z-index 0
                    filter blur(0.6rem)
                    background-image url(./images/header-bg.jpg)
                    background-size cover
                    background-position-y 40%
                    background-repeat no-repeat
                .movie-filter
                    background-color #40454d
                    opacity 0.55
                .movie-container
                    overflow hidden
                    z-index 1
                    position relative
                    .movie-cover
                        float left
                        width 2.854rem
                        height 4rem
                        border 1px solid #f0f2f3
                        position relative
                        .link
                            cursor pointer
                            display block
                            width 100%
                            height 100%
                            .img
                                width 100%
                        // &:after
                        //     content ''
                        //     position absolute
                        //     right 0.1rem
                        //     bottom 0.1rem
                        //     width 0.667rem
                        //     height 0.667rem
                        //     background-image url(./images/bofang.png)
                        //     background-size 100% auto 
                        //     background-repeat no-repeat
                        //     border-radius 50%
                        //     opacity 0.7
                    .movie-content
                        overflow hidden
                        padding-left 0.4rem
                        .movie-name
                            font-size 17px
                            margin 0.08rem 0
                        .movie-ename
                            font-size 12px
                            margin-bottom 0.2rem
                        .movie-score
                            font-size 12px
                            margin-bottom 0.4rem
                            .rating
                                .img
                                    width 0.28rem
                                    height 0.28rem
                                    margin-right 6px
                                .rating-score
                                    font-size 0.38rem
                                    color #ffc600
                            .score-num
                                font-size 8px
                                color $font_color
                                opacity 0.7
                        .movie-detail
                            font-size 12px
                            margin-bottom 0.16rem
                            opacity .7
                            p
                                margin-bottom 0.20rem
                .operating
                    margin-top 0.5rem
                    div
                        border 1px solid rgba(255,255,255,.4)
                        background-color rgba(255,255,255,.4)
                        font-size 14px
                        color $font_color
                        position relative
                        z-index 2
                        text-align center
                        padding 0.25rem 0
                        border-radius 4px
                        img
                            vertical-align middle
                        span
                            vertical-align middle
                    .movie-watch
                        margin-right .3rem
                        img
                            width 14px
                            height 14px
                    .movie-mark
                        img
                            width 18px
                            height 18px
        .section-seperate
            padding-top 0.4rem
            margin-bottom 0.3rem
            border-top 1px solid #e5e5e5
        .section-expander
            padding-left 0.4rem
            padding-right 0.4rem
            .text-expander
                .text-expander__content.close
                    min-height 65px
                    display -webkit-box
                    overflow hidden
                    text-overflow ellipsis
                    word-break break-all
                    -webkit-box-orient vertical
                    -webkit-line-clamp 3
                .text-expander__button
                    height 0.7rem
                    text-align center
                    .icon-chevron__down
                        width 10px
                        height 10px
                        border 2px solid #aaaaaa
                        display inline-block
                        border-width 0 2px 2px 0
                        box-sizing border-box
                        transform rotateZ(45deg)
                        transition transform 0.5s
                    .icon-chevron__down.up
                        transform rotateZ(-135deg)
                        transition transform 0.5s
        .footer_buy
            width 100%
            background-color $hdbg_color
            color $font_color
            text-align center
            letter-spacing 1px
            font-size 0.4343rem
            line-height 3
            position fixed
            bottom 0
            z-index 9999
        .movie-actor
            padding 0.3rem
            font-size 0.35rem
            .title 
                .text
                    display inline-block
                    margin-bottom 0.3rem
            .movie-actor__lists
                overflow hidden
                .items
                    list-style none
                    display -webkit-box
                    overflow-x scroll
                    overflow-y hidden
                    -webkit-overflow-scrolling touch
                    &::-webkit-scrollbar
                        width 0
                        height 0
                        display none
                    .item
                        width 2rem
                        font-size 0.32rem
                        text-align center
                        list-style none
                        margin-right 0.25rem
                        img
                            width 100%
                            height 2.3rem
                        .name
                            color rgba(0,0,0,1)
                            white-space nowrap
                            overflow hidden
                            text-overflow ellipsis
                        .work
                            color rgba(0,0,0,0.5)
                            white-space nowrap
                            overflow hidden
                            text-overflow ellipsis
        .Boxoffice
            box-sizing border-box
            padding 0.3rem 0.4rem
            margin 0.4rem auto
            width 100%
            // height 20%
            .title
                // color rgba(0,0,0,0.9)
                font-size 0.35rem
            .content
                display flex
                justify-content space-around
                .message
                    margin-top 0.15rem
                    text-align center
                .number
                    color red
                    font-size 0.6rem
                .text
                    font-size: 0.3rem
                    color rgba(0,0,0,0.5)
        .movie-photo
            width 100%
            height 22%
            margin-top 0.2rem
            margin-bottom 0.3rem
            padding 0.3rem 0.4rem 0.3rem 0.4rem
            box-sizing border-box
            .title 
                display flex
                justify-content space-between
                align-items center
                .left
                    font-size 0.35rem
                    color rgba(0,0,0,0.7)
                .right
                    font-size 0.3rem
                    color rgba(0,0,0,0.6)
            .movie-photo_lists
                list-style none
                width 100%
                overflow-x scroll
                white-space nowrap
                margin-top 0.4rem
                position relative
                -webkit-overflow-scrolling touch
                &::-webkit-scrollbar
                    width 0
                    height 0
                    display none
                .list
                    list-style none
                    display inline-block
                    width 2.7rem
                    height 2.2rem
                    margin-right 0.15rem
                    &:nth-child(2)
                        width 3.5rem
                    &:last-child
                        margin-right 0
                    img
                        width 100%
                        height 100%
        .section6
            overflow hidden
            padding-bottom 0.3rem
            margin-bottom 0
            // border-bottom 1px solid rgba(0,0,0,0.2)
        .pos_r
            position relative
            font-size 15px
            .join-comment
                position absolute
                font-size 14px
                background-color #e54847
                color $font_color
                padding 0.1rem 0.3rem
                border-radius 20px
                top 50%
                right 0
                transform translateY(-50%)
        .movie-comment
            overflow hidden
            padding 0.2rem 0 0.4rem 0
            .comment-item
                float left
                border 1px solid #aaaaaa
                border-radius 20px
                padding 0.1rem 0.25rem
                margin-top .2rem
                margin-right .3rem
        .section7
            padding-bottom 0.2rem
            margin-bottom 0
            border-top 0
            padding-right 0
            overflow hidden
        .section7-title
            font-size 14px
            font-weight bold
        .section7-main
            .section7-main__item
                    margin-top 0.3rem
                    position relative
                .section7-share
                    width 2.5rem
                    height 0.8rem
                    background-color rgba(0,0,0,0.7)
                    position absolute
                    right 0.7rem
                    top 0.1rem
                    display flex
                    justify-content space-around
                    color white
                    font-size 12px
                    line-height  0.8rem
                    text-align center
                .section7-share.section-click
                    display none
                    &::before
                        content ""
                        width 1px
                        height 0.3rem
                        background-color rgba(255,255,255,0.6)
                        position absolute
                        top 0.25rem
                        right 1.25rem 
                    span
                        display inline-block
                        width 50% 
                .user-pic
                    img 
                        width 0.8rem
                        height 0.8rem
                        border-radius 50%
                        float left
                        vertical-align middle
                .section7-content  
                    margin-left 1rem
                    // margin-right 0.4rem
                    border-bottom 1px solid rgba(0,0,0,0.3)
                    // transform scale(0.5)
                    .name
                        font-size 12px
                        color black
                    .vip 
                        width 0.7rem
                        height 0.3rem
                    .icongou
                        width 0.3rem
                        height 0.3rem
                    .icondian
                        width 0.5rem
                        height 0.3rem
                        float right
                        margin-right 0.2rem
                        margin-top 0.3rem
                    .grade
                        font-size 10px
                        color rgba(0,0,0,0.6)
                    .text
                        margin-top 0.2rem
                        text-align left
                        margin-bottom 0.3rem
                        padding-right 0.4rem
                        color black
                    .footer
                        img
                            width 0.3rem
                            height 0.3rem
                            // vertical-align baseline
                        margin-bottom 0.3rem
                        padding-right 0.4rem
                        display flex
                        justify-content space-between
                        align-items center
                        .date 
                            flex 1
                        .like
                            padding 0 0.3rem
                            height 0.6rem
                            border 1px solid rgba(0,0,0,0.5)
                            border-radius 0.3rem
                            line-height 0.6rem
                            margin-right 0.4rem
                        .comment
                            padding 0 0.3rem
                            height 0.6rem
                            border 1px solid rgba(0,0,0,0.5)
                            border-radius 0.3rem
                            line-height 0.6rem
                            img
                                position relative
                                top 1px
        .section8
            margin-bottom 1.35rem
            padding 0
            .comment-num
                height 1.2rem 
                text-align center
                line-height 1.2rem
                color red
                font-size 15px
                letter-spacing 1px
                font-weight 600






            






#toast
    display none








